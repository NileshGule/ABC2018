@{
    ViewData["Title"] = "Tech Talks 2018";
}

<div class="row">
    <div class="col-md-4">
        <h2>What can this Site do?</h2>
        <ul>
            <li>Sample ASP.NET Core MVC for Demo..</li>
            <li>Search text from local stored data..</li>
            <li>Search results from other system API..</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Search</h2>
        <div class="input-group">
            <span class="input-group-addon">Keyword:</span>
            <input id="keyword" type="text" class="form-control" name="keyword" placeholder="Enter a keyword">
        </div>
        <div class="input-group">
            <span class="input-group-addon">Service:</span>
            <input id="svcUrl" type="text" class="form-control" name="svcUrl" placeholder="Enter Service Url">
        </div>
        <div class="input-group">
            <div class="pull-right">
                <button type="submit" id="searchLocal" class="btn btn-primary" onclick="javascript: localSearchValue();">Search Local</button>
                <button type="submit" id="searchService" class="btn btn-warning" onclick="javascript: serviceSearchValue();">Search Service</button>
            </div>
        </div>
        <div id="LocalSearchResult"></div>
        <div id="ServiceSearchResult"></div>
    </div>
    <div class="col-md-4">
        <h2>Search data-source</h2>
        <ul>
            @foreach (var kv in Model.keyValues)
            {
                <li>@kv.Key <span>--> @kv.Value</span></li>
            }
        </ul>
    </div>
</div>

